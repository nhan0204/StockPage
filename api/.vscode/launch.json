{
    "configurations": [
        {
            "name": ".NET Core WSL Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "publish",
            "program": "${workspaceFolder}/bin/Debug/net8.0/api.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "debuggerPath": "~/vsdbg/vsdbg",
                "quoteArgs": true
            },
        }
    ]
}